<Window x:Class="BrainStormEra_WPF.ConfirmLogoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logout Confirmation" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
        WindowStyle="None" 
        Width="300" 
        Height="150"
        Background="#FF4A90E2">
    <Grid>
        <TextBlock Text="Are you sure you want to log out?" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   TextWrapping="Wrap" 
                   Margin="10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
            <Button Content="Yes" Width="80" Height="30" Margin="10" 
                    Background="#FF50E3C2" Foreground="White" BorderBrush="Transparent" 
                    Click="YesButton_Click"/>
            <Button Content="No" Width="80" Height="30" Margin="10" 
                    Background="#FF50E3C2" Foreground="White" BorderBrush="Transparent" 
                    Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
